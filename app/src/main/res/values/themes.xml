<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyToDoList" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/major_2</item>
        <item name="colorPrimaryVariant">@color/major_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/major_2</item>
        <item name="colorSecondaryVariant">@color/major_2</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/major</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.work" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:statusBarColor">@color/work</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

     <style name="Theme.family" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:statusBarColor">@color/family</item>
         <item name="colorOnSecondary">@color/white</item>
    </style>
     <style name="Theme.travel" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:statusBarColor">@color/travel</item>
         <item name="colorOnSecondary">@color/white</item>
    </style>
    <style name="Theme.personal" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:statusBarColor">@color/personal</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.statusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/background</item>


    </style><style name="Theme.AppThemes_StatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/major</item>
    </style>


    <style name="Theme.CustomCalendarView" parent="@android:style/Widget.CalendarView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/custom_calendar_text_size</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/work</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="backgroundTint">@color/work</item>

    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Other theme attributes -->
        <item name="colorSurface">@color/major</item>
    </style>



</resources>