<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>


        <style name="CalenderViewCustom" parent="Theme.AppCompat">
            <item name="colorAccent">@android:color/holo_blue_dark</item>
            <item name="colorPrimary">@android:color/darker_gray</item>
            <item name="android:textColorPrimary">@color/black</item>
        </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <style name="AppThemes_StatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/major</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="FontWithStroke">
        <item name="android:textAppearance">@style/TextAppearanceWithStroke</item>
    </style>

    <style name="TextAppearanceWithStroke">
        <item name="android:textColor">@color/white</item> <!-- Define your desired text color -->
        <item name="android:textSize">16sp</item> <!-- Define your desired text size -->
        <item name="android:textStyle">bold</item> <!-- Define your desired text style -->
        <item name="android:shadowColor">@color/major_4</item> <!-- Define your desired stroke color -->
        <item name="android:shadowRadius">10</item> <!-- Define your desired stroke width -->
    </style>

</resources>